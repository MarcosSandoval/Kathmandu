    android:orientation="vertical"
    tools:context="com.androidtraining.kathmandu.view.DetailFragmentConstraint">

    <TextView
        android:id="@+id/textView5"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/textView_margin"
        android:text="@string/optimize_layout" />

    <include
        android:id="@+id/buttons_layout1"
        layout="@layout/reusable_layout" />

    <include
        android:id="@+id/buttons_layout2"
        layout="@layout/reusable_layout" />

    <include
        android:id="@+id/buttons_layout3"
        layout="@layout/reusable_layout2" />

</LinearLayout>
